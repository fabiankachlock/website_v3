<style>
  .content {
    padding: 2rem;
    font-family: 'Mona Sans';
    flex: 1;
    max-width: 768px;
    margin: 0 auto;
    width: calc(100% - 4rem);
    overflow-x: hidden;
    hyphens: auto;
    -webkit-hyphens: auto;
  }

  h1 {
    color: var(--color-text-header);
    font-family: 'Source Code Pro';
    font-weight: 500;
    font-size: 3rem;
    position: relative;
    margin: 0;
    margin-bottom: 1.5rem;
  }

  h2 {
    font-family: 'Mona Sans';
    font-weight: 700;
    color: var(--color-text-header);
    font-size: 1.5rem;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }

  h3 {
    font-family: 'Mona Sans';
    font-weight: 600;
    color: var(--color-text-header);
    font-size: 1.4rem;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }

  p {
    margin-bottom: 1rem;
    line-height: 1.5rem;
  }

  :global(a) {
    color: var(--color-primary);
  }

  :global(a):hover {
    color: var(--color-secondary);
  }

  strong {
    font-size: 1.2rem;
    font-weight: 600;
  }
</style>
