</Main>

<style>
  .hero__image-wrapper {
    margin: 2rem auto;
    width: 40vw;
    height: 40vw;
    min-width: 200px;
    min-height: 200px;
    max-height: 400px;
    max-width: 400px;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    transform: translateZ(0) scale(1, 1);
    -webkit-transform: translateZ(0) scale(1, 1);
    position: relative;
  }

  .hero__image-mask {
    position: absolute;
    overflow: hidden;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    border: 2px solid var(--color-text);
    z-index: 2;
    transition:
      top 70ms ease-in-out,
      left 70ms ease-in-out;
  }

  .hero__image-shadow {
    overflow: hidden;
    width: 100%;
    height: 100%;
    border: 2px solid var(--color-text);
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
    z-index: 1;
    border-radius: 10px;
  }

  .hero__image {
    height: 120%;
    width: auto;
    translate: -28% -10%;
  }

  .hero__image-shadow .hero__image {
    transition: scale 70ms ease-in-out;
    filter: grayscale(0.7);
  }

  .hero__image-wrapper:hover .hero__image-shadow .hero__image {
    scale: 0.98;
  }

  .hero__image-wrapper:hover .hero__image-mask {
    top: -1rem;
    left: -1rem;
  }

  .section-anchor {
    display: block;
    visibility: hidden;
    margin-bottom: 50px;
  }

  .section__header {
    color: var(--color-primary);
    font-family: "Source Code Pro";
    font-weight: 500;
    letter-spacing: 3px;
    font-size: 2rem;
    padding-left: max(10vw, 1rem);
    position: relative;
  }

  .section__header span {
    background-color: var(--color-bg);
    padding: 0 0.5rem;
    border-radius: 0.2em;
  }

  .section__header::before {
    content: "";
    display: block;
    background-color: var(--color-primary);
    height: 2px;
    top: 50%;
    translate: 0 -50%;
    position: absolute;
    left: 0;
    width: 100%;
    box-shadow: 0 12px 0 12px var(--color-surface);
    z-index: -1;
  }

  .section {
    margin: 1rem 0;
    padding-bottom: 500px;
  }
</style>
