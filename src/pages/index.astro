---
import { changeLanguage } from 'i18next';
import { Image } from 'astro:assets';
import Main from '@/layouts/Main.astro';
import meJpeg from '@/assets/me.jpeg';
import SkillDrawer from '@/components/home/SkillDrawer.astro';
import Translation from '@/components/Translation.astro';
import ProjectCard from '@/components/home/ProjectCard.astro';
import githubLogo from '@carbon/icons/svg/32/logo--github.svg?raw';
import instagramLogo from '@carbon/icons/svg/32/logo--instagram.svg?raw';
import emailLogo from '@carbon/icons/svg/32/email.svg?raw';

changeLanguage('de');
---

<Main>
  <section class="section hero">
    <div class="hero__image-wrapper">
      <Image class="hero__image" src={meJpeg} alt="Me :)" />
    </div>
    <div>
      <h1 class="hero__title">
        <span class="hero__intro">Hello, I'm</span><br />
        <span class="hero__name">
          <span class="hero__caret"></span>
           Fabian
        </span>
      </h1>
    </div>
  </section>
  <section class="section about">
    <a id="about" class="section-anchor">About</a>
    <h2 class="section__header">
      <span>About</span>
    </h2>
  </section>
  <section class="section skills">
    <a id="skills" class="section-anchor">Skills</a>
    <h2 class="section__header">
      <span>Skills</span>
    </h2>
    <div class="skills-container">
      <SkillDrawer
        color="var(--color-secondary-1)"
        percentage={0.8}
        featuredTools={['HTML', 'CSS', 'JS', 'TS']}
        tools={['Web APIs', 'express', 'Nestjs', 'Electron', 'eslint', 'prettier', 'jest', 'Cypress']}
      >
        <Translation slot="title">
          <span slot="de">Webdevelopment Basics</span>
          <span slot="en">Webdevelopment Basics</span>
        </Translation>
        <Translation slot="content">
          <span slot="de"
            >Webdevelopment Basics is great and this here has to mimic some long text explaining whats going on...</span
          >
          <span slot="en"
            >Webdevelopment Basics is great and this here has to mimic some long text explaining whats going on...</span
          >
        </Translation>
      </SkillDrawer>
      <SkillDrawer
        color="var(--color-secondary-2)"
        percentage={0.8}
        featuredTools={['vite', 'pinia', 'vuetify', 'vue-i18n']}
        tools={['tailwindcss', 'vue-router']}
      >
        <Translation slot="title">
          <span slot="de">Vue.js - my frontend framework of choice</span>
          <span slot="en">Vue.js - my frontend framework of choice</span>
        </Translation>
        <Translation slot="content">
          <span slot="de">BLA</span>
          <span slot="en">BLA</span>
        </Translation>
      </SkillDrawer>
      <SkillDrawer
        color="var(--color-secondary-3)"
        percentage={0.8}
        featuredTools={['Astro', 'React', 'Angular']}
        tools={['Nuxt.js', 'Alpinejs']}
      >
        <Translation slot="title">
          <span slot="de">Other frontend frameworks</span>
          <span slot="en">Other frontend frameworks</span>
        </Translation>
        <Translation slot="content">
          <span slot="de">BLA</span>
          <span slot="en">BLA</span>
        </Translation>
      </SkillDrawer>
      <SkillDrawer
        color="var(--color-secondary-1)"
        percentage={0.8}
        featuredTools={['fiber', 'go-cron', 'SSE']}
        tools={['WebSockets', 'golang-migrate', 'Postgresql', 'MongoDB']}
      >
        <Translation slot="title">
          <span slot="de">Golang - my backend language of choice</span>
          <span slot="en">Golang - my backend language of choice</span>
        </Translation>
        <Translation slot="content">
          <span slot="de">BLA</span>
          <span slot="en">BLA</span>
        </Translation>
      </SkillDrawer>
      <SkillDrawer
        color="var(--color-secondary-4)"
        percentage={0.8}
        featuredTools={['ASP.NET', 'Blazor', 'WASM']}
        tools={['WebSockets', 'Mudblazor', 'Quartz.AspNetCore', 'MongoDB']}
      >
        <Translation slot="title">
          <span slot="de">C# & .NET</span>
          <span slot="en">C# & .NET</span>
        </Translation>
        <Translation slot="content">
          <span slot="de">BLA</span>
          <span slot="en">BLA</span>
        </Translation>
      </SkillDrawer>
      <SkillDrawer
        color="var(--color-secondary-2)"
        percentage={0.8}
        featuredTools={['Git', 'Github', 'Jira']}
        tools={['Confluence', 'BitBucket', 'Youtrack']}
      >
        <Translation slot="title">
          <span slot="de">Version Control & Project management</span>
          <span slot="en">Version Control & Project management</span>
        </Translation>
        <Translation slot="content">
          <span slot="de">BLA</span>
          <span slot="en">BLA</span>
        </Translation>
      </SkillDrawer>
      <SkillDrawer
        color="var(--color-secondary-4)"
        percentage={0.8}
        featuredTools={['Docker', 'AWS', 'Github Actions']}
        tools={['Heroku', 'Bash', 'Bitbucket Pipelines']}
      >
        <Translation slot="title">
          <span slot="de">Deplyoment & CI/CD</span>
          <span slot="en">Deplyoment & CI/CD</span>
        </Translation>
        <Translation slot="content">
          <span slot="de">BLA</span>
          <span slot="en">BLA</span>
        </Translation>
      </SkillDrawer>
      <SkillDrawer
        color="var(--color-secondary-3)"
        percentage={0.8}
        featuredTools={['Rust', 'Kotlin', 'MQTT']}
        tools={['Redis', 'BullMQ', 'Swift', 'p5.js']}
      >
        <Translation slot="title">
          <span slot="de">Other tools, languages & libraries</span>
          <span slot="en">Other tools, languages & libraries</span>
        </Translation>
        <Translation slot="content">
          <span slot="de">BLA</span>
          <span slot="en">BLA</span>
        </Translation>
      </SkillDrawer>
    </div>
  </section>
  <section class="section contact">
    <a id="contact" class="section-anchor">Contact</a>
    <h2 class="section__header">
      <span>Contact</span>
    </h2>
    <ul class="contact-content">
      <li class="contact__item contact__item--email">
        <div class="contact__logo">
          <Fragment set:html={emailLogo} />
        </div>
        <h3>Email</h3>
        <a class="contact__link" href="mailto:contact@fabiankachlock.dev">contact@fabiankachlock.dev</a>
      </li>
      <li class="contact__item contact__item--github">
        <div class="contact__logo">
          <Fragment set:html={githubLogo} />
        </div>
        <h3>Github</h3>
        <a class="contact__link" href="https://github.com/fabiankachlock">@fabiankachlock</a>
      </li>
      <li class="contact__item contact__item--instagram">
        <div class="contact__logo">
          <Fragment set:html={instagramLogo} />
        </div>
        <h3>Instagram</h3>
        <a class="contact__link" href="https://www.instagram.com/fabian.kachlock/">@fabian.kachlock</a>
      </li>
    </ul>
  </section>
  <section class="section projects">
    <a id="projects" class="section-anchor">Projects</a>
    <h2 class="section__header">
      <span>Projects</span>
    </h2>
    <div class="projects-container">
      <ProjectCard color="var(--color-secondary-1)" link="#" tools={['ABC', 'EFG', 'HIJ', 'KLM']}>
        <Translation slot="title">
          <span slot="de">zwoo</span>
          <span slot="en">zwoo</span>
        </Translation>
        <Translation slot="description">
          <span slot="de"
            >Wow, here i have to write some slightly longer text again, just to be able to check how longer text looks
            in the design</span
          >
          <span slot="en"
            >Wow, here i have to write some slightly longer text again, just to be able to check how longer text looks
            in the design</span
          >
        </Translation>
      </ProjectCard>
    </div>
  </section>
</Main>

<style>
  .section.hero {
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    min-height: 100vh;
    min-height: 100dvh;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .hero__image-wrapper {
    width: 100%;
    max-width: clamp(200px, 50vw, 300px);
    max-height: clamp(200px, 50vw, 300px);
    overflow: hidden;
    aspect-ratio: 1 / 1;
    border-radius: 50%;
  }

  .hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero__intro {
    display: block;
    font-family: 'Mona Sans';
    color: var(--color-text);
    opacity: 0.6;
    font-size: 2rem;
  }

  .hero__name {
    display: block;
    font-family: 'Source Code Pro';
    color: var(--color-primary);
    font-size: 5rem;
    position: relative;
  }

  .hero__caret {
    display: block;
    position: absolute;
    background-color: var(--color-text);
    width: 1ch;
    height: 8px;
    bottom: 0px;
    animation: pulse 1.5s infinite;
  }

  @keyframes pulse {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .section {
    padding: 1rem;
    position: relative;
  }

  @media only screen and (min-width: 720px) {
    .section {
      padding: 2rem;
    }
  }

  .section:not(:first-of-type) {
    border-top: 1px solid var(--color-text);
  }

  .about {
    background-color: var(--color-secondary-3);
  }

  .skills {
    background-color: var(--color-bg);
  }

  .contact {
    background-color: var(--color-secondary-2);
  }

  .contact-content {
    padding: 0;
    list-style: none;
    margin: 0;
  }

  .contact__item {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    margin: 0.5rem 0;
    font-family: 'Mona Sans';
    font-size: 1.6rem;
  }

  .contact__logo {
    width: 2rem;
    height: 2rem;
    padding: 1rem;
    background-color: var(--color-bg);
    border-radius: 50%;
    border: 1px solid var(--color-text);
    margin-right: 1rem;
    box-shadow: 3px 3px 0 0 var(--color-text);
    transition:
      width 70ms linear,
      height 70ms linear,
      padding 70ms linear;
  }

  .contact__item--github .contact__logo {
    background-color: var(--color-secondary-4);
  }

  .contact__item--email .contact__logo {
    background-color: var(--color-secondary-1);
  }

  .contact__item--instagram .contact__logo {
    background-color: var(--color-secondary-3);
  }

  .contact__logo :global(svg) {
    fill: var(--color-text);
  }

  .contact__link {
    font-family: 'Source Code Pro';
    color: var(--color-text);
    margin-left: 0.5rem;
  }

  .contact__item:hover .contact__logo {
    width: 2.6rem;
    height: 2.6rem;
    padding: 0.7rem;
  }
</style>
