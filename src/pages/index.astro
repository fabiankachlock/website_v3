---
import { changeLanguage } from 'i18next';
import { Image } from 'astro:assets';
import Main from '@/layouts/Main.astro';
import meJpeg from '@/assets/me.jpeg';
import SkillDrawer from '@/components/home/SkillDrawer.astro';
import Translation from '@/components/Translation.astro';

changeLanguage('de');
---

<Main>
  <section class="section hero">
    <div class="hero__image-wrapper">
      <div class="hero__image-mask">
        <Image class="hero__image" src={meJpeg} alt="" />
      </div>
      <div class="hero__image-shadow">
        <Image class="hero__image" src={meJpeg} alt="" />
      </div>
    </div>
  </section>
  <section class="section about">
    <a id="about" class="section-anchor">About</a>
    <h2 class="section__header">
      <span>About</span>
    </h2>
  </section>
  <section class="section skills">
    <a id="skills" class="section-anchor">Skills</a>
    <h2 class="section__header">
      <span>Skills</span>
    </h2>
    <div class="skills-container">
      <SkillDrawer
        color="var(--color-secondary-1)"
        percentage={0.8}
        featuredTools={['HTML', 'CSS', 'JS', 'TS']}
        tools={['Web APIs', 'express', 'Nestjs', 'Electron', 'eslint', 'prettier', 'jest', 'Cypress']}
      >
        <Translation slot="title">
          <span slot="de">Webdevelopment Basics</span>
          <span slot="en">Webdevelopment Basics</span>
        </Translation>
        <Translation slot="content">
          <span slot="de"
            >Webdevelopment Basics is great and this here has to mimic some long text explaining whats going on...</span
          >
          <span slot="en"
            >Webdevelopment Basics is great and this here has to mimic some long text explaining whats going on...</span
          >
        </Translation>
      </SkillDrawer>
      <SkillDrawer
        color="var(--color-secondary-2)"
        percentage={0.8}
        featuredTools={['vite', 'pinia', 'vuetify', 'vue-i18n']}
        tools={['tailwindcss', 'vue-router']}
      >
        <Translation slot="title">
          <span slot="de">Vue.js - my frontend framework of choice</span>
          <span slot="en">Vue.js - my frontend framework of choice</span>
        </Translation>
        <Translation slot="content">
          <span slot="de">BLA</span>
          <span slot="en">BLA</span>
        </Translation>
      </SkillDrawer>
      <SkillDrawer
        color="var(--color-secondary-3)"
        percentage={0.8}
        featuredTools={['Astro', 'React', 'Angular']}
        tools={['Nuxt.js', 'Alpinejs']}
      >
        <Translation slot="title">
          <span slot="de">Other frontend frameworks</span>
          <span slot="en">Other frontend frameworks</span>
        </Translation>
        <Translation slot="content">
          <span slot="de">BLA</span>
          <span slot="en">BLA</span>
        </Translation>
      </SkillDrawer>
      <SkillDrawer
        color="var(--color-secondary-1)"
        percentage={0.8}
        featuredTools={['fiber', 'go-cron', 'SSE']}
        tools={['WebSockets', 'golang-migrate', 'Postgresql', 'MongoDB']}
      >
        <Translation slot="title">
          <span slot="de">Golang - my backend language of choice</span>
          <span slot="en">Golang - my backend language of choice</span>
        </Translation>
        <Translation slot="content">
          <span slot="de">BLA</span>
          <span slot="en">BLA</span>
        </Translation>
      </SkillDrawer>
      <SkillDrawer
        color="var(--color-secondary-4)"
        percentage={0.8}
        featuredTools={['ASP.NET', 'Blazor', 'WASM']}
        tools={['WebSockets', 'Mudblazor', 'Quartz.AspNetCore', 'MongoDB']}
      >
        <Translation slot="title">
          <span slot="de">C# & .NET</span>
          <span slot="en">C# & .NET</span>
        </Translation>
        <Translation slot="content">
          <span slot="de">BLA</span>
          <span slot="en">BLA</span>
        </Translation>
      </SkillDrawer>
      <SkillDrawer
        color="var(--color-secondary-2)"
        percentage={0.8}
        featuredTools={['Git', 'Github', 'Jira']}
        tools={['Confluence', 'BitBucket', 'Youtrack']}
      >
        <Translation slot="title">
          <span slot="de">Version Control & Project management</span>
          <span slot="en">Version Control & Project management</span>
        </Translation>
        <Translation slot="content">
          <span slot="de">BLA</span>
          <span slot="en">BLA</span>
        </Translation>
      </SkillDrawer>
      <SkillDrawer
        color="var(--color-secondary-4)"
        percentage={0.8}
        featuredTools={['Docker', 'AWS', 'Github Actions']}
        tools={['Heroku', 'Bash', 'Bitbucket Pipelines']}
      >
        <Translation slot="title">
          <span slot="de">Deplyoment & CI/CD</span>
          <span slot="en">Deplyoment & CI/CD</span>
        </Translation>
        <Translation slot="content">
          <span slot="de">BLA</span>
          <span slot="en">BLA</span>
        </Translation>
      </SkillDrawer>
      <SkillDrawer
        color="var(--color-secondary-3)"
        percentage={0.8}
        featuredTools={['Rust', 'Kotlin', 'MQTT']}
        tools={['Redis', 'BullMQ', 'Swift', 'p5.js']}
      >
        <Translation slot="title">
          <span slot="de">Other tools, languages & libraries</span>
          <span slot="en">Other tools, languages & libraries</span>
        </Translation>
        <Translation slot="content">
          <span slot="de">BLA</span>
          <span slot="en">BLA</span>
        </Translation>
      </SkillDrawer>
    </div>
  </section>
  <section class="section contact">
    <a id="contact" class="section-anchor">Contact</a>
    <h2 class="section__header">
      <span>Contact</span>
    </h2>
  </section>
  <section class="section projects">
    <a id="projects" class="section-anchor">Projects</a>
    <h2 class="section__header">
      <span>Projects</span>
    </h2>
  </section>
</Main>

<style>
  .hero__image-wrapper {
    margin: 2rem auto;
    width: 40vw;
    height: 40vw;
    min-width: 200px;
    min-height: 200px;
    max-height: 400px;
    max-width: 400px;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    transform: translateZ(0) scale(1, 1);
    -webkit-transform: translateZ(0) scale(1, 1);
    position: relative;
  }

  .hero__image-mask {
    position: absolute;
    overflow: hidden;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    border: 2px solid var(--color-text);
    z-index: 2;
    transition:
      top 70ms ease-in-out,
      left 70ms ease-in-out;
  }

  .hero__image-shadow {
    overflow: hidden;
    width: 100%;
    height: 100%;
    border: 2px solid var(--color-text);
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
    z-index: 1;
    border-radius: 10px;
  }

  .hero__image {
    height: 120%;
    width: auto;
    translate: -28% -10%;
  }

  .hero__image-shadow .hero__image {
    transition: scale 70ms ease-in-out;
    filter: grayscale(0.7);
  }

  .hero__image-wrapper:hover .hero__image-shadow .hero__image {
    scale: 0.98;
  }

  .hero__image-wrapper:hover .hero__image-mask {
    top: -1rem;
    left: -1rem;
  }

  .section-anchor {
    display: block;
    visibility: hidden;
    position: absolute;
    top: -100px;
  }

  .section__header {
    color: var(--color-text);
    font-family: 'Source Code Pro';
    font-weight: 400;
    font-size: 3rem;
    position: relative;
    margin: 0;
    margin-bottom: 1.5rem;
  }

  .section {
    padding: 1rem;
    position: relative;
  }

  @media only screen and (min-width: 720px) {
    .section {
      padding: 2rem;
    }
  }

  .section:not(:first-of-type) {
    border-top: 1px solid var(--color-text);
  }

  .about {
    background-color: var(--color-secondary-3);
  }

  .skills {
    background-color: var(--color-bg);
  }

  .contact {
    background-color: var(--color-secondary-4);
  }
</style>
