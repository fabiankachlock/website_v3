---
import type { LocalizedProject } from '@/content/projects';
import { Image } from 'astro:assets';
import i18next from 'i18next';
import Translation from '../Translation.astro';

export type Props = {
  project: LocalizedProject;
};

const { project: projectData } = Astro.props;
const translatedData = projectData[i18next.language] ?? projectData[Object.keys(projectData)[0]!];
const link = translatedData!.slug;
const project = translatedData!.data;
---

<div class="project-card">
  <a class="project-card__link" href={link}>
    <div class="project-card__image-wrapper">
      <Image class="project-card__image" src={project.cover} alt="Project image" />
    </div>
    <div class="project-card__divider"></div>
    <div class="project-card__content">
      <p class="project-card__year">{project?.year}</p>
      <div class="project-card__title">
        <h3>{project?.title}</h3>
      </div>
      <div class="project-card__description">
        <p>{project?.description}</p>
      </div>
      <div class="project-card__tools">
        {project?.technologies.map(name => <p class="project-card__tool">{name}</p>)}
      </div>
      <div class="project-card__footer">
        <div class="project-card__socials">
          {/* If -> github */}
          {/* If -> web */}
          {/* If -> link */}
        </div>
        <button class="project-card__read">
          <Translation>
            <span slot="de">Mehr erfahren</span>
            <span slot="en">Read more</span>
          </Translation>
        </button>
      </div>
    </div>
  </a>
</div>

<style>
  .project-card {
    background-color: var(--color-bg);
    border: 1px solid var(--color-text);
    border-radius: 5px;
  }
  .project-card:hover {
    background-color: var(--color-surface);
    border: 2px solid var(--color-text);
  }
  .project-card:hover .project-card__link {
    border: 0px solid transparent;
  }

  .project-card__link {
    display: block;
    color: var(--color-text);
    text-decoration: none;
    border: 1px solid transparent;
    padding: 1rem;
  }

  .project-card__image-wrapper {
    max-height: 300px;
    overflow: hidden;
    height: 100%;
    width: 100%;
    max-width: 300px;
    margin: 0 auto 1rem;
  }

  .project-card__image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
  }

  .project-card__divider {
    height: 2px;
    width: 100%;
    background: var(--color-text);
  }

  .project-card__content {
    position: relative;
    margin-top: 1rem;
  }

  .project-card__year {
    font-size: 1.2rem;
    font-family: 'Mona Sans';
    font-weight: 300;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .project-card__title {
    font-size: 2rem;
    font-family: 'Mona Sans';
    margin-bottom: 0.5rem;
  }

  .project-card__description {
    font-size: 1.25rem;
    font-family: 'Mona Sans';
    margin-bottom: 0.5rem;
  }

  .project-card__tools {
    display: flex;
    flex-wrap: wrap;
    gap: 0.3rem 0;
    margin-top: 1rem;
  }

  .project-card__tool {
    margin: 0;
    font-size: 1rem;
    background-color: var(--color-surface);
    font-family: 'Mona Sans';
    padding: 0.3rem 0.8rem;
    white-space: nowrap;
    box-shadow: 0 0 0 0 var(--color-text);
    border: 1px solid var(--color-text);
    border-radius: 20px;
    margin: 0 0.2rem;
    padding: 0.3rem 1rem;
    transition:
      margin 140ms linear,
      padding 140ms linear,
      translate 140ms linear,
      box-shadow 140ms linear,
      border-radius 100ms ease-in;
  }

  .project-card__tool:hover {
    translate: -3px -3px;
    box-shadow: 3px 3px 0 0 var(--color-text);
    background-color: var(--color-primary);
    color: var(--color-primary-text);
  }

  .project-card__footer {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-top: 1rem;
  }

  .project-card__read {
    font-size: 1.1rem;
    font-family: 'Mona Sans';
    font-weight: 600;
    cursor: pointer;
    background: none;
    color: var(--color-text);
    border: 2px solid var(--color-text);
    background-color: var(--color-surface);
    padding: 0.4rem 0.9rem;
    border-radius: 5px;
    transition:
      box-shadow 70ms linear,
      translate 70ms linear;
    box-shadow:
      0px 0px 0 -1px var(--color-surface),
      0px 0px var(--color-text);
  }

  .project-card__read:hover {
    translate: -5px -5px;
    background-color: var(--color-primary);
    color: var(--color-primary-text);
    box-shadow:
      5px 5px 0 -1px var(--color-surface),
      5px 5px var(--color-text);
  }
</style>
