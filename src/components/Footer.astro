---
import ThemeSwitch from '@/components/ThemeSwitch.astro';
import LanguageSelect from './LanguageSelect.astro';
import LocalizedLink from './LocalizedLink.astro';
import Translation from './Translation.astro';
---

<footer class="footer">
  <div class="footer__text">
    <p>Â© Fabian Kachlock <span id="year">2024</span>&emsp;|&emsp;</p>
    <LocalizedLink path="/impressum">
      <Translation>
        <span slot="de">Impressum</span>
        <span slot="en">Imprint</span>
      </Translation>
    </LocalizedLink>
  </div>
  <div class="footer__spacer" style="flex: 1 0 0; width: 100%"></div>
  <ThemeSwitch />
  <LanguageSelect />
</footer>

<style>
  .footer {
    display: flex;
    position: relative;
    z-index: 100;
    background-color: var(--color-surface);
    border-top: 2px solid var(--color-text);
    padding: 0.2rem;
    justify-content: flex-end;
    align-items: center;
    flex-wrap: wrap-reverse;
  }

  .footer__text {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 0.3rem;
  }

  .footer__text :global(a),
  .footer__text p {
    margin: 0;
    font-family: 'Mona Sans';
    color: var(--color-text);
    font-size: 1rem;
  }

  .footer__text :global(a:hover) {
    color: var(--color-primary);
  }
</style>
