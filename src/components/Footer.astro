---
import ThemeSwitch from '@/components/ThemeSwitch.astro';

import terminalIcon from '@carbon/icons/svg/32/terminal.svg?raw';
import translateIcon from '@carbon/icons/svg/32/translate.svg?raw';
---

<footer class="footer">
  <div class="footer__bar">
    <div class="footer__text">
      <p>Â© Fabian Kachlock 2023</p>
    </div>
    <div class="footer__spacer" style="flex: 1 0 0; width: 100%"></div>
    <div class="terminal-opener__wrapper">
      <button class="terminal-opener">
        <Fragment set:html={terminalIcon} />
      </button>
    </div>
    <div class="translate-wrapper">
      <button class="translate-button">
        <Fragment set:html={translateIcon} />
      </button>
    </div>
    <ThemeSwitch />
  </div>
  <div class="footer__console">
    <div class="footer__console-content">
      <div class="footer__console-content-wrapper">TEST</div>
    </div>
  </div>
</footer>

<style>
  .footer {
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 100;
    position: sticky;
    bottom: 2px;
  }

  .footer__bar {
    background-color: var(--color-surface);
    border-top: 1px solid var(--color-bg);
    padding: 0.2rem;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    flex-wrap: wrap;
    grid-row: 2;
  }

  .footer__console {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 0fr;
    transition: grid-template-rows 130ms ease-in-out;
  }

  .footer.open .footer__console {
    grid-template-rows: 1fr;
  }

  .footer__console-content {
    position: relative;
    overflow: hidden;
    background-color: var(--color-bg);
  }

  .footer__text {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 0.3rem;
  }

  .footer__text p {
    margin: 0;
    font-family: 'Mona Sans';
    color: var(--color-text);
    font-size: 1rem;
  }

  .translate-wrapper,
  .terminal-opener__wrapper {
    width: 2rem;
    height: 2rem;
    cursor: pointer;
    position: relative;
    margin: 0.4rem;
  }

  .translate-button,
  .terminal-opener {
    cursor: pointer;
    background: none;
    width: 2rem;
    height: 2rem;
    border: 1px solid var(--color-text);
    background-color: var(--color-surface);
    padding: 2px;
    position: absolute;
    top: 0;
    left: 0;
    transition:
      box-shadow 70ms linear,
      top 70ms linear,
      left 70ms linear;
    box-shadow:
      0px 0px 0 -1px var(--color-surface),
      0px 0px var(--color-text);
  }

  .translate-wrapper:hover .translate-button,
  .terminal-opener__wrapper:hover .terminal-opener {
    top: -3px;
    left: -3px;
    background-color: var(--color-bg);
    box-shadow:
      3px 3px 0 -1px var(--color-surface),
      3px 3px var(--color-text);
  }

  .translate-button :global(svg),
  .terminal-opener :global(svg) {
    display: block;
    width: 100%;
    height: 100%;
    fill: var(--color-text);
    transition: scale 70ms linear;
  }

  .translate-button:active :global(svg),
  .terminal-opener:active :global(svg) {
    scale: 0.8;
  }
</style>
