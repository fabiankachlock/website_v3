---
import ThemeSwitch from '@/components/ThemeSwitch.astro';
import LanguageSelect from './LanguageSelect.astro';
import LocalizedLink from './LocalizedLink.astro';
import Translation from './Translation.astro';
---

<footer class="footer">
  <div class="footer__text">
    <p>Â© Fabian Kachlock <span id="year">2024</span></p>
    <LocalizedLink path="/impressum">
      <Translation>
        <span slot="de">Impressum</span>
        <span slot="en">Imprint</span>
      </Translation>
    </LocalizedLink>
    <LocalizedLink path="/datenschutz">
      <Translation>
        <span slot="de">Datenschutz</span>
        <span slot="en"> Privacy</span>
      </Translation>
    </LocalizedLink>
  </div>
  <div class="footer__spacer"></div>
  <div class="footer__actions">
    <ThemeSwitch />
    <LanguageSelect />
  </div>
</footer>

<style>
  .footer {
    display: flex;
    position: relative;
    flex-direction: row;
    z-index: 10;
    background-color: var(--color-surface);
    border-top: 2px solid var(--color-text);
    padding: 0.2rem;
    padding-bottom: 1rem;
    justify-content: space-between;
    align-items: flex-start;
  }

  .footer__spacer {
    display: none;
  }

  .footer__actions {
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }

  .footer__text {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 0.2rem;
  }

  .footer__text :global(a),
  .footer__text p {
    margin: 0;
    padding: 0.5rem 0.3rem;
    font-family: 'Mona Sans';
    color: var(--color-text);
    font-size: 1rem;
  }

  .footer__text :global(a:hover) {
    color: var(--color-primary);
  }

  @media only screen and (min-width: 620px) {
    .footer {
      justify-content: flex-end;
      align-items: center;
      padding-bottom: unset;
    }

    .footer__text {
      flex-direction: row;
      gap: 0;
    }

    .footer__spacer {
      display: block;
      flex: 1 0 0;
      width: 100%;
    }

    .footer__text :global(a),
    .footer__text p {
      padding: 0.3rem 0.5rem;
      margin: 0.2rem 0;
    }

    .footer__text :global(a):not(:last-child),
    .footer__text p:not(:last-child) {
      border-right: 1px solid var(--color-text);
    }
  }
</style>
